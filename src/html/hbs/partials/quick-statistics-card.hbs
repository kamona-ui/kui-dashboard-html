<div class="p-4 rounded-md shadow-md bg-white dark:bg-dark-eval-1">
    <div class="flex items-center justify-between">
        <div class="flex items-center gap-6">
            <span class="iconify {{ icon }} w-8 h-8 text-primary"></span>

            <div class="flex items-center gap-2">
                {{#if (eq status "up")}}
                <span class="iconify tabler--trending-up w-5 h-5 text-green-500"></span>
                <span class="text-xs font-medium text-green-500">{{ percentage }}</span>
                {{else if (eq status "down")}}
                <span class="iconify tabler--trending-down w-5 h-5 text-red-500"></span>
                <span class="text-xs font-medium text-red-500">{{ percentage }}</span>
                {{else}}
                <span class="iconify tabler--minus w-5 h-5 text-yellow-500"></span>
                <span class="text-xs font-medium text-yellow-500">{{ percentage }}</span>
                {{/if}}
            </div>
        </div>

        <div x-dropdown>
            {{#btn
                variant="transparent"
                srText="Card Actions"
                icon="tabler--dots"
                iconSizeClasses="w-5 h-5"
                className="p-1.5"
                attrs="x-dropdown:trigger"
            }}{{/btn}}

            <div x-dropdown:menu.bottom-end class="z-50 w-48 rounded-md shadow-lg">
                <div class="rounded-md ring-1 ring-black ring-opacity-5 py-1 bg-white dark:bg-dark-eval-2">
                    <a
                        href="#"
                        class="block px-4 py-2 text-sm leading-5 text-gray-800 hover:text-white hover:bg-primary focus:outline-none focus:text-white focus:bg-primary transition duration-150 ease-in-out dark:focus:text-white dark:focus:bg-primary dark:text-gray-300 dark:hover:text-white dark:hover:bg-primary"
                    >
                        Action 1
                    </a>

                    <a
                        href="#"
                        class="block px-4 py-2 text-sm leading-5 text-gray-800 hover:text-white hover:bg-primary focus:outline-none focus:text-white focus:bg-primary transition duration-150 ease-in-out dark:focus:text-white dark:focus:bg-primary dark:text-gray-300 dark:hover:text-white dark:hover:bg-primary"
                    >
                        Action 2
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-2 relative grid grid-cols-2">
        <div>
            <h4 class="text-3xl font-semibold">{{ total }}</h4>
            <p class="text-base font-medium text-gray-500 dark:text-gray-400">
                {{ title }}
            </p>
        </div>
        
        {{> @partial-block}}
    </div>
</div>
